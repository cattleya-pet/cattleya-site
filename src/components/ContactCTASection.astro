---
import './ContactCTASection.scss';
import BaseButton from './BaseButton.astro';
import ButtonWrapper from './ButtonWrapper.astro';
const bgImg = '/src/assets/images/bg_contact-cta-01.webp';
---
<section class="contact-cta-section" style={`background-image: url('${bgImg}');`}>
  <div class="contact-cta-overlay"></div>
  <div class="contact-cta-content">
    <div class="contact-cta-title-group">
      <div class="contact-cta-background-text">Contact</div>
      <h2 class="contact-cta-title">お問い合わせ</h2>
    </div>
    <p class="contact-cta-desc">ご質問・ご相談などお気軽にお問い合わせください。<br>スタッフが丁寧にご対応いたします。</p>
    <ButtonWrapper>
      <BaseButton href="/contact" text="お問い合わせはこちら" />
    </ButtonWrapper>
  </div>
</section> 