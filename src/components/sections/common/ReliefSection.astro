---
import './ReliefSection.scss';
import SectionHeading from '../../ui/SectionHeading.astro';
import BaseButton from '../../ui/buttons/BaseButton.astro';
const reliefs = [
  {
    mainImg: '/src/assets/images/img_relief-main-01.webp',
    icon: '/src/assets/icons/icon_relief-01.svg',
    title: 'メディカルチェック',
    subtitle: 'Medical check',
    desc: 'カトレアでは、すべてのワンちゃん・ネコちゃんが健やかで元気な状態でお客様にお迎えしていただけるよう、専門獣医師が入舎時に徹底した健康チェックを実施し、ワクチン接種や駆虫プログラムを実施しています。<br><br>私たちはすべてのペットに責任を持ち、これからお客様のパートナーとなる大切な命と考えています。<br>そのため、一頭一頭の健康状態に細心の注意を払い、安心して新しいご家族に迎え入れていただけるよう、専門的かつ丁寧なケアを心がけています。',
    detailIcons: [
      {
        icon: '/src/assets/icons/icon_relief-01.svg',
        label: '獣医師による<br>健康チェック'
      },
      {
        icon: '/src/assets/icons/icon_relief-04.svg',
        label: '混合ワクチン・<br>ケンネルコフワクチン<br>接種済み'
      },
      {
        icon: '/src/assets/icons/icon_relief-05.svg',
        label: 'パルボウイルス<br>チェック'
      },
      {
        icon: '/src/assets/icons/icon_relief-06.svg',
        label: '駆虫プログラム'
      },
      {
        icon: '/src/assets/icons/icon_relief-07.svg',
        label: '血統書発行'
      }
    ]
  },
  {
    mainImg: '/src/assets/images/img_relief-main-02.webp',
    icon: '/src/assets/icons/icon_relief-02.svg',
    title: 'わんにゃんサポート',
    subtitle: 'Wan-Nyan support',
    desc: 'カトレアでは、お迎えいただいた後も、大切な家族であるワンちゃん・ネコちゃんが健やかに暮らせるよう、万が一に備えた様々な保障をご用意しています。<br><br>これにより、お客様が愛するペットと心から安心して幸せな時間を過ごせる環境をサポートします。',
    detailIcons: [
      {
        icon: '/src/assets/icons/icon_relief-06.svg',
        label: '生命保障'
      },
      {
        icon: '/src/assets/icons/icon_relief-07.svg',
        label: '先天性疾患保証'
      },
      {
        icon: '/src/assets/icons/icon_relief-08.svg',
        label: '一部手術費保証'
      }
    ]
  },
  {
    mainImg: '/src/assets/images/img_relief-main-03.webp',
    icon: '/src/assets/icons/icon_relief-03.svg',
    title: 'アフターサポート',
    subtitle: 'After support',
    desc: 'カトレアでは、ペットをお迎えいただいた後も、飼育やしつけのご相談をサポートコールで行っています。',
    detailIcons: [
      {
        icon: '/src/assets/icons/icon_relief-09.svg',
        label: 'アフターサポート'
      }
    ]
  },
];
---
<section class="relief-section" style="background-image: url('/src/assets/images/bg_bricks-white-01.webp');">
  <div class="relief-section__overlay"></div>
  <div class="container">
    <SectionHeading 
      subtitle="Relief"
      title="カトレアの安心"
      alignment="center"
      subtitleClass="text-secondary"
      titleClass="text-primary"
    />
    <div class="relief-list">
      {reliefs.map((item, index) => (
        <div class={`relief-item ${index % 2 === 0 ? 'relief-item--odd' : 'relief-item--even'}`}>
          <!-- モバイル用ヘッダー -->
          <div class="relief-info-header relief-info-header--mobile">
            <div class="relief-title-group">
              <h3 class="relief-item-title" id={item.title === 'わんにゃんサポート' ? 'wannyan-support' : ''}>{item.title}</h3>
              <p class="relief-item-subtitle">{item.subtitle}</p>
            </div>
          </div>
          
          <div class="relief-main-img-wrap">
            <img src={item.mainImg} alt={item.title} class="relief-main-img" loading="lazy" />
          </div>
          
          <div class="relief-info">
            <!-- デスクトップ用ヘッダー -->
            <div class="relief-info-header relief-info-header--desktop">
              <div class="relief-title-group">
                <h3 class="relief-item-title" id={item.title === 'わんにゃんサポート' ? 'wannyan-support' : ''}>{item.title}</h3>
                <p class="relief-item-subtitle">{item.subtitle}</p>
              </div>
            </div>
            <p class="relief-item-desc" set:html={item.desc}></p>
            <div class="relief-detail-icons">
              {item.detailIcons.map((iconItem) => (
                <div class="relief-detail-icon-item">
                  <img src={iconItem.icon} alt={iconItem.label} class="relief-detail-icon" loading="lazy" />
                  <span class="relief-detail-icon-label" set:html={iconItem.label}></span>
                </div>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="relief-section__button-wrapper">
      <BaseButton href="/relief" text="詳しくみる" />
    </div>
  </div>
</section> 