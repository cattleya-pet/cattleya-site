---
import './WanNyanSupportSection.scss';

const mainImg = '/images/content/img_relief-main-02.webp';

const supportItems = [
  {
    icon: '/icons/icon_relief-06.svg',
    phrase: '病気による死亡の場合のサポートをいたします',
    title: '生命保障',
    description: 'ご契約日より1年以内に、ご購入いただいたペットが病気により死亡した場合にのみ代替ペットをお迎えいただくことができます。代替ペットをお迎えする場合、代替ペットのペット価格（税込）がご購入時にお支払いいただいたペット価格（税込）を上回る場合は、お客様に差額をお支払いしていただきます。\n\n代替ペットのペット価格が下回る場合は差額の返金はいたしかねます。又、代替ペットをお迎えする際、代替ペットのメディカルチェック代、わんにゃんサポート代は別途お客様負担となります。'
  },
  {
    icon: '/icons/icon_relief-07.svg',
    phrase: 'お迎え後に発症する可能性のある生まれつきの疾患をサポートいたします',
    title: '先天性疾患保障',
    description: 'ご契約日より1年以内に、ご購入いただいたペットが重度な先天性疾患と診断された場合、代替えのペットのお迎え、又はご購入時にお支払いいただいたペット価格（税込）を上限とした手術費用を負担いたします。\n手術費用負担の場合は手術回数に関わらずペット価格（税込）を上限といたします。\n（代替ペットをお迎えの場合は「生命保障」に準じます）'
  },
  {
    icon: '/icons/icon_relief-08.svg',
    phrase: '手術費を3万円まで保障いたします',
    title: 'デベソ・鼠蹊ヘルニア・陰睾丸の手術費保障',
    description: 'ご契約日より 1年以内に、ご購入いただいたペットがデベソ・鼠蹊ヘルニア・陰睾丸いずれかの手術が要すると獣医師により診断された場合に、手術費のみ最大3万円まで弊社が保障いたします。'
  }
];
---

<section id="wannyan-support" class="wannyan-support-section">
  <div class="container wannyan-support-container">
    <!-- モバイル用ヘッダー -->
    <div class="wannyan-support-heading--mobile">
      <h2 class="wannyan-support-section-title" data-aos="fade-up" data-aos-duration="1000" data-aos-easing="ease-out-cubic">わんにゃんサポート</h2>
    </div>
    
    <div class="wannyan-support-layout" data-aos="fade-up" data-aos-duration="1000" data-aos-easing="ease-out-cubic">
      <div class="wannyan-support-content">
        <!-- デスクトップ用ヘッダー -->
        <div class="wannyan-support-heading--desktop">
          <h2 class="wannyan-support-section-title" data-aos="fade-up" data-aos-duration="1000" data-aos-easing="ease-out-cubic">わんにゃんサポート</h2>
        </div>
        
        <p class="wannyan-support-desc">
          ワンちゃん・ネコちゃんを新しい家族として迎えられたお客様が、安心して一緒に過ごせるよう、「わんにゃんサポート」では万が一の事態に備えたさまざまな保障をご用意しています。
        </p>
      </div>
      
      <div class="wannyan-support-img-wrap">
        <div class="wannyan-support-img-bg"></div>
        <img src={mainImg} alt="わんにゃんサポート" class="wannyan-support-img" loading="lazy" />
      </div>
    </div>
    
    <div class="wannyan-support-items">
      {supportItems.map((item, index) => (
        <div class="wannyan-support-item" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic" data-aos-delay={200 + (index * 150)}>
          <div class="wannyan-support-item-icon-wrap">
            <img src={item.icon} alt={item.title} class="wannyan-support-item-icon" loading="lazy" />
          </div>
          <div class="wannyan-support-item-content">
            <div class="wannyan-support-item-phrase">
              {item.phrase}
            </div>
            <h3 class="wannyan-support-item-title">
              {index === 2 ? (
                <span>デベソ・鼠蹊ヘルニア・<span class="mobile-break">陰睾丸の手術費保障</span></span>
              ) : (
                item.title
              )}
            </h3>
            <p class="wannyan-support-item-desc">{item.description}</p>
          </div>
        </div>
      ))}
    </div>
    
    <!-- 回転したサブタイトル -->
    <div class="wannyan-support-subtitle">Wan-Nyan support</div>
  </div>
</section>