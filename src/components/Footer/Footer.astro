---
import { siteConfig } from '../../config/site';
import './Footer.scss';
import Logo from '../Header/Logo.astro';

const currentYear = new Date().getFullYear();

// モバイル版のリンクカテゴリ（2列グリッド用）
const mobileLinks = [
  [
    { title: 'ホーム', href: '/' },
    { title: '子犬を探す', href: '/search/dogs' }
  ],
  [
    { title: '子猫を探す', href: '/search/cats' },
    { title: '店舗情報', href: siteConfig.links.stores }
  ],
  [
    { title: 'カトレアの安心', href: '/safety' },
    { title: 'ホームステイ', href: '/homestay' }
  ],
  [
    { title: '来店予約', href: '/reservation' },
    { title: 'お迎えまでの流れ', href: '/process' }
  ],
  [
    { title: 'ペット保険', href: '/insurance' },
    { title: 'お客様の声', href: '/voice' }
  ],
  [
    { title: '会社情報', href: siteConfig.links.company },
    { title: '採用情報', href: '/recruit' }
  ],
  [
    { title: 'お問い合わせ', href: siteConfig.links.contact },
    null // 2列目を空にする
  ],
  [
    { title: '勧誘方針', href: '/solicitation' },
    { title: '比較推奨方針', href: '/recommendation' }
  ],
  [
    { title: 'プライバシーポリシー', href: '/privacy' },
    null // 2列目を空にする
  ]
];

// PC版のリンクカテゴリ（4列構成）
const desktopLinks = [
  // 第1列
  [
    { title: 'ホーム', href: '/' },
    { title: '子犬を探す', href: '/search/dogs' },
    { title: '子猫を探す', href: '/search/cats' },
    { title: '店舗情報', href: siteConfig.links.stores }
  ],
  // 第2列
  [
    { title: 'カトレアの安心', href: '/safety' },
    { title: 'ホームステイ', href: '/homestay' },
    { title: '来店予約', href: '/reservation' },
    { title: 'お迎えまでの流れ', href: '/process' },
    { title: 'ペット保険', href: '/insurance' },
    { title: 'お客様の声', href: '/voice' }
  ],
  // 第3列
  [
    { title: '会社情報', href: siteConfig.links.company },
    { title: '採用情報', href: '/recruit' },
    { title: 'お問い合わせ', href: siteConfig.links.contact }
  ],
  // 第4列
  [
    { title: '勧誘方針', href: '/solicitation' },
    { title: '比較推奨方針', href: '/recommendation' },
    { title: 'プライバシーポリシー', href: '/privacy' }
  ]
];
---

<footer class="footer">
  <div class="footer-container">
    <!-- モバイル版レイアウト -->
    <div class="footer-mobile">
      <!-- ロゴエリア -->
      <div class="footer-logo-area">
        <div class="footer-logo-section">
          <Logo />
        </div>
        <div class="footer-company-info">
          運営会社：株式会社Cattleya
        </div>
        <div class="footer-social">
          <a href="https://instagram.com" target="_blank" rel="noopener noreferrer" class="footer-social-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
          <a href="https://tiktok.com" target="_blank" rel="noopener noreferrer" class="footer-social-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12.53.02C13.84 0 15.14.01 16.44 0c.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- リンクエリア -->
      <nav class="footer-links-area">
        <ul class="footer-nav-list">
          {mobileLinks.map((linkPair, index) => (
            <li class="footer-link-group">
              <div class="footer-link-grid">
                <a href={linkPair[0].href} class="footer-nav-link">{linkPair[0].title}</a>
                {linkPair[1] && (
                  <a href={linkPair[1].href} class="footer-nav-link">{linkPair[1].title}</a>
                )}
              </div>
              {/* PC版の列区切りに合わせて横線を表示: 第1列終了後(index 1)、第2列終了後(index 4)、第3列終了後(index 6) */}
              {(index === 1 || index === 4 || index === 6) && <div class="footer-divider"></div>}
            </li>
          ))}
        </ul>
      </nav>
    </div>
    
    <!-- PC版レイアウト -->
    <div class="footer-desktop">
      <div class="footer-desktop-content">
        <!-- 左側：ロゴエリア -->
        <div class="footer-desktop-logo-area">
          <div class="footer-logo-section">
            <Logo />
          </div>
          <div class="footer-company-info">
            運営会社：株式会社Cattleya
          </div>
          <div class="footer-social">
            <a href="https://instagram.com" target="_blank" rel="noopener noreferrer" class="footer-social-link">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
              </svg>
            </a>
            <a href="https://tiktok.com" target="_blank" rel="noopener noreferrer" class="footer-social-link">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12.53.02C13.84 0 15.14.01 16.44 0c.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
              </svg>
            </a>
          </div>
        </div>
        
        <!-- 右側：4列のリンクメニュー -->
        <nav class="footer-desktop-links">
          {desktopLinks.map((column) => (
            <div class="footer-desktop-column">
              <ul class="footer-desktop-nav">
                {column.map((link) => (
                  <li>
                    <a href={link.href} class="footer-desktop-nav-link">{link.title}</a>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </nav>
      </div>
    </div>
    
    <!-- 最下部：コピーライト -->
    <div class="footer-bottom">
      <div class="footer-copyright">
        &copy; {currentYear} {siteConfig.name} Co.,Ltd.
      </div>
    </div>
  </div>
</footer>