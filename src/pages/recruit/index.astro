---
import Layout from '../../layouts/Layout.astro';
import HeroSection from '../../components/sections/common/HeroSection.astro';
import BannerSection from '../../components/sections/common/BannerSection.astro';
import ContactCTASection from '../../components/sections/common/ContactCTASection.astro';
import DataTable from '../../components/ui/DataTable.astro';
import { Image } from 'astro:assets';
import logoImage from '../../assets/logos/logo_main-color.svg';
import CatFootprintIcon from '../../assets/icons/icon_cat-footprint-01.svg?raw';

// パンくずリストのデータ
const breadcrumbItems = [
  { label: 'ホーム', href: '/' },
  { label: '採用情報' }
];

// 募集要項のデータ
const recruitmentRequirementsData = [
  { 
    label: '募集職種', 
    value: 'ペットショップスタッフ（正社員・アルバイト・パート）<br class="sm-up-only">※販売、接客、ペットのケア全般を担当していただきます。' 
  },
  { 
    label: '勤務地', 
    value: 'Cattleya店舗（新宿店、渋谷店、池袋店）<br>※詳細は応募時にご相談ください。' 
  },
  { 
    label: '勤務時間', 
    value: '正社員：10:30～20:30（休憩1時間30分）／シフト制<br>アルバイト：10:30～20:30（休憩1時間30分）／シフト制' 
  },
  { 
    label: '給与', 
    value: '正社員：月給26万円～（経験・能力を考慮）<br>アルバイト：時給1,200円～（店舗により異なる）' 
  },
  { 
    label: '休日・休暇', 
    value: '正社員：週休2日制（シフト制）、年次有給休暇、特別休暇<br>アルバイト：シフトにより応相談' 
  },
  { 
    label: '待遇・<br class="sm-down-only">福利厚生', 
    value: '各種社会保険完備（健康保険・厚生年金・雇用保険・労災保険）<br>交通費支給（上限あり）<br>制服貸与<br>社員割引制度<br>研修制度あり' 
  },
  { 
    label: '応募資格', 
    value: '未経験者歓迎（研修制度あり）<br>動物が好きで、明るく前向きに仕事に取り組める方<br>接客業経験者や管理職経験者、動物関連の資格保有者は優遇' 
  }
];
---

<Layout title="採用情報 | Cattleya(カトレア)" description="カトレアの採用情報をご紹介します。一緒にペットと飼い主様の幸せを届けるお仕事をしませんか。カトレアの魅力やスタッフの1日や採用までの流れをご紹介します。">
  <main>
    <HeroSection 
      title="採用情報"
      image="/images/backgrounds/img_bg-hero_recruit-01.webp"
      breadcrumbItems={breadcrumbItems}
    />

    <!-- 採用メインセクション -->
    <section class="recruit-section">
      <div class="recruit-container">
        <div class="recruit-main">
          <!-- セクションラベル -->
          <div class="recruit-label">
            <Image src={logoImage} alt="Cattleya" class="recruit-logo" width={240} height={60} />
          </div>
          
          <!-- メインコンテンツエリア -->
          <div class="recruit-content">
            <!-- タイトル -->
            <div class="recruit-title-section">
              <h2 class="recruit-title">
                あなたの個性・経験・好き(犬、猫、接客…)を<br class="sm-up-only">カトレアで活かしませんか？
              </h2>
            </div>
            
            <!-- 説明文 -->
            <div class="recruit-description-section">
              <div class="recruit-description">
                <p>
                  カトレアでは、ワンちゃん・ネコちゃんとお客様をつなぐ大切な役割を担うスタッフを募集しています。ペットを通じてお客様の生活に幸せと笑顔を届けること。<br>
                  それが私たちの使命です。
                </p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- 特長カードセクション -->
        <div class="recruit-features">
          <div class="recruit-feature-card" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic">
            <div class="recruit-feature-content">
              <h3 class="recruit-feature-title">カトレアで働く魅力</h3>
              <p class="recruit-feature-description">
                動物好きにはたまらない、かわいいワンちゃん・ネコちゃんと毎日触れ合える職場です。<br>
                接客やペットの管理を通じて、人とペットの幸せな暮らしに貢献できます。<br>
                チームワークを大切にし、スタッフ同士のサポートも充実しています。
              </p>
            </div>
            <div class="recruit-feature-image">
              <img src="/images/content/img_recruit_features-01.webp" alt="カトレアで働く魅力" loading="lazy" />
            </div>
          </div>
          
          <div class="recruit-feature-card" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic">
            <div class="recruit-feature-content">
              <h3 class="recruit-feature-title">こんな方を求めています</h3>
              <p class="recruit-feature-description">
                ・ワンちゃん・ネコちゃんが大好きな方<br>
                ・人と接することが好きで、丁寧な対応ができる方<br>
                ・成長意欲があり、学ぶことを楽しめる方<br>
                ・自身の経験を活かしたい方
              </p>
            </div>
            <div class="recruit-feature-image">
              <img src="/images/content/img_recruit_features-02.webp" alt="こんな方を求めています" loading="lazy" />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- カトレアでの１日の流れセクション -->
    <section class="recruit-flow-section">
      <!-- 回転したサブタイトル -->
      <div class="recruit-flow-subtitle">One day with Staff</div>
      <div class="recruit-flow-container">
        <div class="recruit-flow-heading">
          <h2 class="recruit-flow-section-title" data-aos="fade-up" data-aos-duration="1000" data-aos-easing="ease-out-cubic">カトレアでの１日の流れ</h2>
        </div>
        
        
        <div class="recruit-flow-items">
          <div class="recruit-flow-item" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic">
            <div class="recruit-flow-item-image">
              <img src="/images/content/img_recruit_job-flow-01.webp" alt="お客様を迎える準備" loading="lazy" />
            </div>
            <div class="recruit-flow-item-content">
              <div class="recruit-flow-item-phrase">お客様を迎える準備</div>
              <h3 class="recruit-flow-item-title">開店準備</h3>
              <p class="recruit-flow-item-desc">毎朝、お店を綺麗に掃除してワンちゃんやネコちゃんたちの健康状態を確認します。<br>ルームの清掃や水・ごはんの準備を行い、ペットたちが快適に過ごせる環境を整えます。</p>
            </div>
          </div>
          
          <div class="recruit-flow-item" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic">
            <div class="recruit-flow-item-image">
              <img src="/images/content/img_recruit_job-flow-02.webp" alt="お客様へのご案内" loading="lazy" />
            </div>
            <div class="recruit-flow-item-content">
              <div class="recruit-flow-item-phrase">お客様へのご案内</div>
              <h3 class="recruit-flow-item-title">接客</h3>
              <p class="recruit-flow-item-desc">お客様とマッチするペットとの出会いをサポートします。<br>ペットの特徴や飼育方法について丁寧に説明し、お客様とペットにとって最適な選択ができるよう心を込めて対応します。<br>ペット用品などのアドバイスも行います。</p>
            </div>
          </div>
          
          <div class="recruit-flow-item" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic">
            <div class="recruit-flow-item-image">
              <img src="/images/content/img_recruit_job-flow-03.webp" alt="ペットのお世話" loading="lazy" />
            </div>
            <div class="recruit-flow-item-content">
              <div class="recruit-flow-item-phrase">ペットのお世話</div>
              <h3 class="recruit-flow-item-title">健康チェック</h3>
              <p class="recruit-flow-item-desc">ペット達の健康管理を行っています。毎日健康状態をチェックし、必要に応じて獣医師と連携を取ります。<br>また、爪切りやシャンプーなどのお手入れも行い、ペットが元気で健康に過ごせる環境を保ちます。</p>
            </div>
          </div>
          
          <div class="recruit-flow-item" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic">
            <div class="recruit-flow-item-image">
              <img src="/images/content/img_recruit_job-flow-04.webp" alt="お店とペットの魅力を発信" loading="lazy" />
            </div>
            <div class="recruit-flow-item-content">
              <div class="recruit-flow-item-phrase">お店とペットの魅力を発信</div>
              <h3 class="recruit-flow-item-title">SNS投稿</h3>
              <p class="recruit-flow-item-desc">ペットたちのかわいい写真や動画を撮影して、SNSやホームページに投稿します。<br>ペットの魅力をお客様に伝える大切なお仕事です。お客様との絆を深める情報発信を意識しています。</p>
            </div>
          </div>
          
          <div class="recruit-flow-item" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic">
            <div class="recruit-flow-item-image">
              <img src="/images/content/img_recruit_job-flow-05.webp" alt="ペットと店舗のケア" loading="lazy" />
            </div>
            <div class="recruit-flow-item-content">
              <div class="recruit-flow-item-phrase">ペットと店舗のケア</div>
              <h3 class="recruit-flow-item-title">閉店作業</h3>
              <p class="recruit-flow-item-desc">営業終了後は店内の清掃や翌日の準備を行います。<br>また、ペットたちの状態を改めて確認し、必要なケアを行います。<br>1日の締めくくりとして、心を込めてお世話をします。</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 採用までの流れセクション -->
    <section class="recruit-process-section">
      <div class="recruit-process-container">
        <div class="recruit-process-heading">
          <h2 class="recruit-process-section-title" data-aos="fade-up" data-aos-duration="1000" data-aos-easing="ease-out-cubic">採用までの流れ</h2>
        </div>
        
        <div class="recruit-process-steps" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic">
          <div class="recruit-process-step">
            <div class="recruit-process-step-card">
              <div class="recruit-process-step-header">
                <div class="recruit-process-step-info">
                  <div class="recruit-process-step-number">
                    <span class="recruit-process-step-step">Step</span>
                    <span class="recruit-process-step-digit">1</span>
                  </div>
                  <h3 class="recruit-process-step-title">ご応募</h3>
                </div>
                <div class="recruit-process-step-icon">
                  <img src="/icons/icon_recruit_flow-01.svg" alt="応募" loading="lazy" />
                </div>
              </div>
              <div class="recruit-process-step-desc">
                <p>お問い合わせフォームより、まずは求人申し込みの旨をご連絡ください。</p>
                <a href="/contact#mail-contact&tab=job" class="recruit-process-step-link">お申し込み</a>
              </div>
            </div>
          </div>
          
          <div class="recruit-process-arrow">
            <img src="/images/ui/icon_arrow-step-01.svg" alt="次のステップ" loading="lazy" />
          </div>
          
          <div class="recruit-process-step">
            <div class="recruit-process-step-card">
              <div class="recruit-process-step-header">
                <div class="recruit-process-step-info">
                  <div class="recruit-process-step-number">
                    <span class="recruit-process-step-step">Step</span>
                    <span class="recruit-process-step-digit">2</span>
                  </div>
                  <h3 class="recruit-process-step-title">面接</h3>
                </div>
                <div class="recruit-process-step-icon">
                  <img src="/icons/icon_recruit_flow-02.svg" alt="面接" loading="lazy" />
                </div>
              </div>
              <div class="recruit-process-step-desc">
                <p>お問い合わせいただきましたら、数日以内にメールにて返信をさせていただきます。<br>
                  その際、面接の日程をご連絡いたしますので、その日に指定した店舗に来店してください。</p>
              </div>
            </div>
          </div>
          
          <div class="recruit-process-arrow">
            <img src="/images/ui/icon_arrow-step-01.svg" alt="次のステップ" loading="lazy" />
          </div>
          
          <div class="recruit-process-step">
            <div class="recruit-process-step-card">
              <div class="recruit-process-step-header">
                <div class="recruit-process-step-info">
                  <div class="recruit-process-step-number">
                    <span class="recruit-process-step-step">Step</span>
                    <span class="recruit-process-step-digit">3</span>
                  </div>
                  <h3 class="recruit-process-step-title">採用</h3>
                </div>
                <div class="recruit-process-step-icon">
                  <img src="/icons/icon_recruit_flow-03.svg" alt="採用決定" loading="lazy" />
                </div>
              </div>
              <div class="recruit-process-step-desc">
                <p>面接終了後、1週間～2週間を目安に選考させていただきます。<br>
                  採用後は日程の調整を行い、入社となります。</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 募集要項セクション -->
    <section class="recruitment-requirements-section" style="background-image: url('/images/backgrounds/bg_bricks-white-01.webp');">
      <div class="recruitment-requirements-section__overlay"></div>
      <div class="recruitment-requirements-container">
        <div class="recruitment-requirements-heading">
          <h2 class="recruitment-requirements-section-title" data-aos="fade-up" data-aos-duration="1000" data-aos-easing="ease-out-cubic">募集要項</h2>
        </div>
        
        <div class="recruitment-requirements-content">
          <div data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic">
            <DataTable data={recruitmentRequirementsData} />
          </div>
          
          <div class="recruitment-requirements-button" data-aos="fade-up" data-aos-duration="1400" data-aos-easing="ease-out-cubic">
            <a href="/contact#mail-contact&tab=job" class="recruitment-apply-button">
              <span class="recruitment-apply-button__line"></span>
              <span class="recruitment-apply-button__text">お申し込み</span>
              <span class="recruitment-apply-button__icon" set:html={CatFootprintIcon}></span>
            </a>
          </div>
        </div>
      </div>
    </section>
    
    <BannerSection />
    <ContactCTASection />
  </main>
</Layout>

<style lang="scss">
@use '../../styles/mixins' as *;
@use '../../styles/tokens/_typography' as *;
@use '../../styles/tokens/_colors' as *;
@use '../../styles/tokens/_radius' as *;

// 採用メインセクション
.recruit-section {
  padding: rem(60) 0 rem(110) 0;
  background: $color-background-primary; // bg-primary
  
  @include breakpoint-up(sm) {
    padding: rem(70) 0 rem(150) 0;
  }
  
  @include breakpoint-up(lg) {
    padding: rem(40) 0 rem(150) 0;
  }
  
  .recruit-container {
    @include container;
    display: flex;
    flex-direction: column;
    gap: rem(60);
    
    @include breakpoint-up(sm) {
      gap: rem(100);
    }
    @include breakpoint-up(lg) {
      gap: rem(140);
    }
  }
}

.recruit-main {
  position: relative;
  display: flex;
  flex-direction: column;
  gap: rem(10);
  padding-top: rem(60);
  
  @include breakpoint-up(sm) {
    align-items: flex-end;
    gap: rem(40);
  }
  @include breakpoint-up(lg) {
    flex-direction: row;
    align-items: flex-start;
    justify-content: center;
  }
}

.recruit-label {
  position: absolute;
  top: rem(-30);
  right: 0;
  z-index: 0;
  width: 50%;
  display: flex;
  justify-content: flex-end;
  
  @include breakpoint-up(sm) {
    top: rem(-20);
    left: rem(-10);
    right: auto;
    left: 10%;
    width: 30%;
    justify-content: flex-start;
  }
  @include breakpoint-up(lg) {
    width: 20%;
    position: static;
  }
}

.recruit-logo {
  width: 100%;
  height: auto;
  opacity: 0.15;
  
  @include breakpoint-up(sm) {

  }
  @include breakpoint-up(xl) {
  }
}

.recruit-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: rem(32);
  width: 100%;
  
  @include breakpoint-up(sm) {
    padding-top: rem(30);
    flex: 0 0 auto;
    gap: rem(40);
    width: 70%;
    max-width: rem(770);
  }
  @include breakpoint-up(xl) {
    padding-top: rem(40);
  }
}

.recruit-title-section {
  width: 100%;
  
  @include breakpoint-up(sm) {
    flex: 0 0 auto;
    width: auto;
  }
}

.recruit-title {
  font-size: rem(22);
  color: $color-text-primary;
  margin: 0;
  line-height: 1.4;
  text-align: left;
  position: relative;
  z-index: 2;
  
  @include breakpoint-up(xl) {
    @include typography-ja-l($font-weight-semibold);
  }
}

.recruit-description-section {
  width: 100%;
  position: relative;
  
  @include breakpoint-up(sm) {
    padding-left: 0;
  }
}

.recruit-description {
  @include breakpoint-up(sm) {
    max-width: rem(760);
  }
  
  p {
    font-size: rem(16);
    color: $color-text-primary;
    line-height: 1.8;
    margin: 0;
    text-align: left;
  }
}

// 特長カードセクション
.recruit-features {
  display: flex;
  flex-direction: column;
  gap: rem(50);
  
  @include breakpoint-up(sm) {
    flex-direction: row;
    gap: rem(40);
    align-items: stretch; // カードの高さを揃える
  }
  @include breakpoint-up(lg) {
    gap: rem(60);
    width: 85%;
    margin: 0 auto;
  }
}

.recruit-feature-card {
  display: flex;
  flex-direction: column;
  gap: rem(24);
  background: $color-background-tertiary;
  border-radius: $radius-m;
  padding: rem(30) rem(20) rem(20);
  flex: 1; // 高さを揃える
  
  @include breakpoint-up(sm) {
    gap: rem(32);
    padding: rem(35) rem(25) rem(30);
  }
  
  @include breakpoint-up(lg) {
    padding: rem(40);
    gap: rem(40);
    max-width: rem(680);
  }
}

.recruit-feature-content {
  order: 1;
  flex: 1; // コンテンツエリアを伸縮させてカードの高さを揃える
}

.recruit-feature-title {
  @include typography-ja-m($font-weight-semibold);
  color: $color-text-primary;
  margin: 0 0 rem(16) 0;
}

.recruit-feature-description {
  @include typography-ja-s;
  color: $color-text-primary;
  line-height: 1.7;
  margin: 0;
}

.recruit-feature-image {
  order: 2;
  margin: 0 rem(-20);
  
  @include breakpoint-up(sm) {
    margin: 0 rem(-20);
  }
  @include breakpoint-up(lg) {
    margin: 0 rem(-40);
  }
  
  img {
    width: 100%;
    height: rem(200);
    object-fit: cover;
    display: block;
    @include breakpoint-up(lg) {
      height: rem(250);
    }
  }
}

// カトレアでの１日の流れセクション
.recruit-flow-section {
  background: $color-background-secondary;
  padding: rem(90) 0 rem(110) 0;
  position: relative;
  
  @include breakpoint-up(sm) {
    padding: rem(120) 0 rem(150) 0;
  }
}

.recruit-flow-container {
  @include container;
  display: flex;
  flex-direction: column;
  position: relative;
}

.recruit-flow-heading {
  margin-bottom: rem(50);
  text-align: center;
  
  @include breakpoint-up(sm) {
    margin-bottom: rem(70);
  }
}

.recruit-flow-section-title {
  @include typography-ja-l($font-weight-semibold);
  color: $color-text-primary;
  margin: 0;
  
  @include breakpoint-up(lg) {
    padding-top: rem(50);
  }
}

.recruit-flow-items {
  display: flex;
  flex-direction: column;
  gap: rem(50);
  
  @include breakpoint-up(sm) {
    gap: rem(70);
  }
}

.recruit-flow-item {
  display: flex;
  flex-direction: column;
  
  @include breakpoint-up(sm) {
    position: relative;
    flex-direction: row;
    align-items: center;
    gap: rem(-40); // ネガティブマージンで重なりを作成
    
    &:nth-child(even) {
      flex-direction: row-reverse; // 偶数項目は左右反転
    }
  }
  
  @include breakpoint-up(lg) {
    gap: rem(-50); // より大きな重なり
  }
  
