    width: 100%;
    min-width: rem(260);
    max-width: rem(300);
    padding: rem(40) rem(24);
  }
  @include breakpoint-up(xl) {
    border-radius: rem(48);
  }
  
  // 吹き出しの尻尾（小円と中円）
