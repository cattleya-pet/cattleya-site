---
import Layout from '../../layouts/Layout.astro';
import HeroSection from '../../components/sections/common/HeroSection.astro';
import BannerSection from '../../components/sections/common/BannerSection.astro';
import ContactCTASection from '../../components/sections/common/ContactCTASection.astro';
import BaseButton from '../../components/ui/buttons/BaseButton.astro';
import footprintIcon from '../../assets/icons/icon_step-cat-footprints-01.svg';
import phoneIcon from '../../assets/icons/icon_store-phone-01.svg';
import lineIcon from '../../assets/icons/icon_line-01.svg';
import mailIcon from '../../assets/icons/icon_store-mail-01.svg';
import { getAllStores } from '../../lib/api/stores';

// 店舗データを取得（APIの生の順番を維持）
const stores = await getAllStores();

// パンくずリストのデータ
const breadcrumbItems = [
  { label: 'ホーム', href: '/' },
  { label: 'ホームステイ' }
];
---

<Layout title="ホームステイ" description="ワンちゃん&ネコちゃんのホームステイサービス。1泊2日または2泊3日、一律税込10,000円でご利用いただけます。">
  <main>
    <HeroSection 
      title="ホームステイ"
      image="/images/backgrounds/img_bg-hero_homestay-01.webp"
      breadcrumbItems={breadcrumbItems}
    />

    <!-- ホームステイサービス紹介セクション -->
    <section class="homestay-intro-section">
      <div class="container">
        <div class="homestay-intro-content">
          <!-- 見出し -->
          <h2 class="homestay-hero-title" data-aos="fade-up" data-aos-duration="1000" data-aos-easing="ease-out-cubic" data-aos-delay="400">
            <span class="homestay-hero-title-main">ワンちゃん&ネコちゃんの</span>
            <span class="homestay-hero-title-sub">
              <!-- 肉球アイコン -->
              <img src="/icons/icon_step-cat-footprints-02.svg" alt="肉球" class="homestay-hero-icon" />
              ホームステイ
            </span>
          </h2>

          <!-- 情報ボックス -->
          <div class="homestay-hero-boxes">
            <!-- ボックス1：選べる泊数 -->
            <div class="homestay-hero-box-wrapper" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic" data-aos-delay="200">
              <div class="homestay-hero-box-label">
                <span class="homestay-hero-box-point">point</span>
                <span class="homestay-hero-box-number">01</span>
              </div>
              <div class="homestay-hero-box">
                <h3 class="homestay-hero-box-title">選べる泊数</h3>
                <div class="homestay-hero-box-content">
                  <div class="homestay-hero-checklist">
                    <div class="homestay-hero-check-item">
                      <img src="/images/ui/icon_check-mark-01.svg" alt="チェック" class="homestay-hero-check-mark" />
                      <span class="homestay-hero-check-text">
                        <span class="homestay-hero-check-number">1</span>泊<span class="homestay-hero-check-number">2</span>日 or <span class="homestay-hero-check-number">2</span>泊<span class="homestay-hero-check-number">3</span>日
                      </span>
                    </div>
                    <div class="homestay-hero-check-item">
                      <img src="/images/ui/icon_check-mark-01.svg" alt="チェック" class="homestay-hero-check-mark" />
                      <span class="homestay-hero-check-text">
                        一律税込<span class="homestay-hero-check-number">10,000</span>円
                      </span>
                    </div>
                  </div>
                  <p class="homestay-hero-note">
                    ※ホームステイ後ご購入の場合、頭金として充当させていただきます
                  </p>
                </div>
              </div>
            </div>

            <!-- ボックス2：お泊りセットつき -->
            <div class="homestay-hero-box-wrapper" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic" data-aos-delay="350">
              <div class="homestay-hero-box-label">
                <span class="homestay-hero-box-point">point</span>
                <span class="homestay-hero-box-number">02</span>
              </div>
              <div class="homestay-hero-box">
                <h3 class="homestay-hero-box-title">お泊りセットつき</h3>
                <div class="homestay-hero-box-content">
                  <div class="homestay-hero-goods-image">
                    <img src="/images/content/img_homestay-goods-02.webp" alt="お泊りセット" />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- こんなご不安ありませんか？セクション -->
    <section class="homestay-concerns-section">
      <div class="homestay-concerns-container">
        <h2 class="homestay-concerns-title" data-aos="fade-up" data-aos-duration="1000" data-aos-easing="ease-out-cubic">こんなご不安ありませんか？</h2>
        
        <!-- モバイル版レイアウト -->
        <div class="homestay-concerns-mobile">
          <!-- 吹き出し1 -->
          <div class="homestay-concerns-bubble homestay-concerns-bubble--right" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic">
            <p class="homestay-concerns-bubble-text">
              ペットを飼うのは<br>
              初めてだけど、<br>
              ちゃんとお世話できるかな...
            </p>
          </div>
          
          <!-- 吹き出し2 -->
          <div class="homestay-concerns-bubble homestay-concerns-bubble--right" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic" data-aos-delay="350">
            <p class="homestay-concerns-bubble-text">
              家族や先住ペットと<br>
              仲良く暮らせるかな...
            </p>
          </div>
          
          <!-- 吹き出し3 -->
          <div class="homestay-concerns-bubble homestay-concerns-bubble--left" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic" data-aos-delay="500">
            <p class="homestay-concerns-bubble-text">
              アレルギー反応は<br>大丈夫かな....
            </p>
          </div>
          
          <!-- 画像群 -->
          <div class="homestay-concerns-images">
            <img src="/images/content/img_homestay_human-01.webp" alt="心配する人1" />
            <img src="/images/content/img_homestay_human-02.webp" alt="心配する人2" />
            <img src="/images/content/img_homestay_human-03.webp" alt="心配する人3" />
          </div>
        </div>
        
        <!-- デスクトップ版レイアウト -->
        <div class="homestay-concerns-desktop">
          <!-- 左エリア -->
          <div class="homestay-concerns-area">
            <div class="homestay-concerns-bubble homestay-concerns-bubble--right" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic">
              <p class="homestay-concerns-bubble-text">
                ペットを飼うのは<br>
              初めてだけど、<br>
              ちゃんとお世話できるかな...
              </p>
            </div>
            <div class="homestay-concerns-image">
              <img src="/images/content/img_homestay_human-01.webp" alt="心配する人1" />
            </div>
          </div>
          
          <!-- 中央エリア -->
          <div class="homestay-concerns-area">
            <div class="homestay-concerns-bubble homestay-concerns-bubble--right" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic" data-aos-delay="350">
              <p class="homestay-concerns-bubble-text">
                家族や先住ペットと<br>
              仲良く暮らせるかな...
              </p>
            </div>
            <div class="homestay-concerns-image">
              <img src="/images/content/img_homestay_human-02.webp" alt="心配する人2" />
            </div>
          </div>
          
          <!-- 右エリア -->
          <div class="homestay-concerns-area">
            <div class="homestay-concerns-bubble homestay-concerns-bubble--left" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic" data-aos-delay="500">
              <p class="homestay-concerns-bubble-text">
                アレルギー反応は<br>大丈夫かな....
              </p>
            </div>
            <div class="homestay-concerns-image">
              <img src="/images/content/img_homestay_human-03.webp" alt="心配する人3" />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ホームステイソリューションセクション -->
    <section class="homestay-solution-section">
      <div class="homestay-solution-container">
        <h2 class="homestay-solution-title" data-aos="fade-up" data-aos-duration="1000" data-aos-easing="ease-out-cubic">
          <div class="homestay-solution-title-line">
            <span class="homestay-solution-title-text homestay-solution-title-text--sub">そんな悩みを解決するのが</span>
          </div>
          <div class="homestay-solution-title-line">
            <span class="homestay-solution-title-text homestay-solution-title-text--main">ホームステイ</span>
          </div>
        </h2>
        
        <!-- モバイル版レイアウト -->
        <div class="homestay-solution-mobile" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic">
          <!-- メイン画像 -->
          <div class="homestay-solution-main-image">
            <img src="/images/content/img_homestay_solution-01.webp" alt="ホームステイソリューション" />
          </div>
          
          <!-- コンテンツボックス -->
          <div class="homestay-solution-content-box">
            <!-- 説明文 -->
            <div class="homestay-solution-description">
              <p>
                ホームステイではワンちゃん・ネコちゃんを実際にお家に迎え入れて、お世話をしていただきます。<br>
                環境・お客様・ご家族・先住ペットなどとの相性を見ていただくことでお客様の不安を取り除きたい。<br>
                そんな想いで始めた取り組みです。
              </p>
            </div>
            
            <!-- スタッフ画像 -->
            <div class="homestay-solution-staff-image">
              <img src="/images/content/img_homestay_staff-01.webp" alt="ホームステイスタッフ" />
            </div>
          </div>
          
          <!-- ボタン -->
          <div class="homestay-solution-button">
            <BaseButton href="/flow" variant="short" text="お迎えまでの流れを確認する" />
          </div>
        </div>
        
        <!-- デスクトップ版レイアウト -->
        <div class="homestay-solution-desktop" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic">
          <!-- 左側：画像 -->
          <div class="homestay-solution-image-area">
            <img src="/images/content/img_homestay_solution-01.webp" alt="ホームステイソリューション" />
          </div>
          
          <!-- 右側：コンテンツ -->
          <div class="homestay-solution-content-area">
            <!-- コンテンツボックス -->
            <div class="homestay-solution-content-box homestay-solution-content-box--desktop">
              <!-- 説明文 -->
              <div class="homestay-solution-description">
                <p>
                  ホームステイではワンちゃん・ネコちゃんを実際にお家に迎え入れて、お世話をしていただきます。<br>
                  環境・お客様・ご家族・先住ペットなどとの相性を見ていただくことでお客様の不安を取り除きたい。<br>
                  そんな想いで始めた取り組みです。
                </p>
              </div>
              
              <!-- スタッフ画像 -->
              <div class="homestay-solution-staff-image">
                <img src="/images/content/img_homestay_staff-01.webp" alt="ホームステイスタッフ" />
              </div>
            </div>
            
            <!-- ボタン -->
            <div class="homestay-solution-button">
              <BaseButton href="/flow" variant="short" text="お迎えまでの流れを確認する" />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ホームステイの流れセクション -->
    <section class="homestay-flow-section">
      <div class="homestay-flow-container">
        <h2 class="homestay-flow-title" data-aos="fade-up" data-aos-duration="1000" data-aos-easing="ease-out-cubic">ホームステイの流れ</h2>
        
        <!-- ホームステイ前 -->
        <div class="homestay-flow-category" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic">
          <h3 class="homestay-flow-category-title">ホームステイ前</h3>
          
          <div class="homestay-flow-steps">
            <!-- Step 1 -->
            <div class="homestay-flow-step">
              <div class="homestay-flow-step-card">
                <div class="homestay-flow-step-header">
                  <div class="homestay-flow-step-info">
                    <div class="homestay-flow-step-number">
                      <span class="homestay-flow-step-step">Step</span>
                      <span class="homestay-flow-step-digit">1</span>
                    </div>
                    <h4 class="homestay-flow-step-title">ご相談・ご来店</h4>
                  </div>
                  <div class="homestay-flow-step-icon">
                    <img src="/icons/icon_homestay_flow-01.svg" alt="ご相談・ご来店" />
                  </div>
                </div>
                <div class="homestay-flow-step-desc">
                  <p>前向きにご検討中のワンちゃん・ネコちゃんをスタッフにご相談ください。店頭でご相談いただくか、下記よりご相談ください。</p>
                </div>
              </div>
            </div>

            <!-- ステップ間の矢印 -->
            <div class="homestay-flow-arrow">
              <img src="/images/ui/icon_arrow-step-01.svg" alt="次のステップ" />
            </div>

            <!-- Step 2 -->
            <div class="homestay-flow-step">
              <div class="homestay-flow-step-card">
                <div class="homestay-flow-step-header">
                  <div class="homestay-flow-step-info">
                    <div class="homestay-flow-step-number">
                      <span class="homestay-flow-step-step">Step</span>
                      <span class="homestay-flow-step-digit">2</span>
                    </div>
                    <h4 class="homestay-flow-step-title">お泊まりセットのご準備</h4>
                  </div>
                  <div class="homestay-flow-step-icon">
                    <img src="/icons/icon_homestay_flow-02.svg" alt="お泊まりセットのご準備" />
                  </div>
                </div>
                <div class="homestay-flow-step-desc">
                  <p>ごはん、簡易サークル、トイレ、おもちゃなど必要なものはすべて、店舗でご用意しています。</p>
                </div>
              </div>
            </div>

            <!-- ステップ間の矢印 -->
            <div class="homestay-flow-arrow">
              <img src="/images/ui/icon_arrow-step-01.svg" alt="次のステップ" />
            </div>

            <!-- Step 3 -->
            <div class="homestay-flow-step">
              <div class="homestay-flow-step-card">
                <div class="homestay-flow-step-header">
                  <div class="homestay-flow-step-info">
                    <div class="homestay-flow-step-number">
                      <span class="homestay-flow-step-step">Step</span>
                      <span class="homestay-flow-step-digit">3</span>
                    </div>
                    <h4 class="homestay-flow-step-title">必要書類の記入</h4>
                  </div>
                  <div class="homestay-flow-step-icon">
                    <img src="/icons/icon_homestay_flow-03.svg" alt="必要書類の記入" />
                  </div>
                </div>
                <div class="homestay-flow-step-desc">
                  <p>お世話の仕方、注意事項、すべてご説明の上、同意書にご署名いただきます。<br>
                    また、身分証明書の確認をさせていただきます。</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- カテゴリー間の区切り -->
        <div class="step-divider">
          <img src={footprintIcon.src} alt="" class="step-divider__icon" data-aos="fade-up" data-aos-duration="800" data-aos-easing="ease-out-cubic" />
        </div>

        <!-- ホームステイ中 -->
        <div class="homestay-flow-category" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic">
          <h3 class="homestay-flow-category-title">ホームステイ中</h3>
          
          <!-- Step 4 -->
          <div class="homestay-flow-step homestay-flow-step--with-image">
            <div class="homestay-flow-step-card">
              <div class="homestay-flow-step-content">
                <div class="homestay-flow-step-header">
                  <div class="homestay-flow-step-info">
                    <div class="homestay-flow-step-number">
                      <span class="homestay-flow-step-step">Step</span>
                      <span class="homestay-flow-step-digit">4</span>
                    </div>
                    <h4 class="homestay-flow-step-title">ご検討・サポート</h4>
                  </div>
                </div>
                <!-- モバイル版：見出しと説明文の間に画像 -->
                <div class="homestay-flow-step-image homestay-flow-step-image--mobile">
                  <img src="/images/content/img_homestay_flow-04.webp" alt="ご検討・サポート" />
                </div>
                <div class="homestay-flow-step-desc">
                  <p>実際にご自宅でホームステイをしていただきます。
                    ホームステイ中は、お電話やLINEを通じてスタッフが精一杯サポートいたします。<br><br>
                    どんな些細なことでも、ご遠慮なくご相談ください。</p>
                </div>
              </div>
              <!-- デスクトップ版：右側に画像 -->
              <div class="homestay-flow-step-image homestay-flow-step-image--desktop">
                <img src="/images/content/img_homestay_flow-04.webp" alt="ご検討・サポート" />
              </div>
            </div>
          </div>
        </div>

        <!-- カテゴリー間の区切り -->
        <div class="step-divider">
          <img src={footprintIcon.src} alt="" class="step-divider__icon" data-aos="fade-up" data-aos-duration="800" data-aos-easing="ease-out-cubic" />
        </div>

        <!-- ホームステイ後 -->
        <div class="homestay-flow-category" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic">
          <h3 class="homestay-flow-category-title">ホームステイ後</h3>
          
          <!-- Step 5 -->
          <div class="homestay-flow-step homestay-flow-step--with-image">
            <div class="homestay-flow-step-card">
              <div class="homestay-flow-step-content">
                <div class="homestay-flow-step-header">
                  <div class="homestay-flow-step-info">
                    <div class="homestay-flow-step-number">
                      <span class="homestay-flow-step-step">Step</span>
                      <span class="homestay-flow-step-digit">5</span>
                    </div>
                    <h4 class="homestay-flow-step-title">再度ご来店</h4>
                  </div>
                </div>
                <!-- モバイル版：見出しと説明文の間に画像 -->
                <div class="homestay-flow-step-image homestay-flow-step-image--mobile">
                  <img src="/images/content/img_homestay_flow-05.webp" alt="再度ご来店" />
                </div>
                <div class="homestay-flow-step-desc">
                  <p>ホームステイが終了したら、ワンちゃん・ネコちゃんと一緒にご来店いただきます。<br>
                    ホームステイを通して「家族として迎え入れたい」とご判断いただいた場合は、そのまま契約手続きに移ります。<br><br>
                    <strong>※ご自宅で契約を判断された場合でも、必ず一度ワンちゃん・ネコちゃんとご来店いただきます。</strong></p>
                </div>
              </div>
              <!-- デスクトップ版：右側に画像 -->
              <div class="homestay-flow-step-image homestay-flow-step-image--desktop">
                <img src="/images/content/img_homestay_flow-05.webp" alt="再度ご来店" />
              </div>
            </div>
          </div>
        </div>

        <!-- ボタン -->
        <div class="homestay-flow-button">
          <BaseButton href="/flow" variant="short" text="お迎えまでの流れを確認する" />
        </div>
      </div>
    </section>

    <!-- ご利用料金セクション -->
    <section class="homestay-pricing-section" style="background-image: url('/images/backgrounds/bg_bricks-white-01.webp');">
      <div class="homestay-pricing-section__overlay"></div>
      <div class="homestay-pricing-container">
        <div class="homestay-pricing-heading">
          <h2 class="homestay-pricing-section-title" data-aos="fade-up" data-aos-duration="1000" data-aos-easing="ease-out-cubic">ご利用料金</h2>
        </div>
        
        <div class="homestay-pricing-content" data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease-out-cubic">
          <div class="homestay-pricing-table-wrapper">
            <table class="homestay-pricing-table">
              <!-- ヘッダー行 -->
              <thead>
                <tr class="homestay-pricing-table__header-row">
                  <th class="homestay-pricing-table__header">泊数プラン</th>
                  <th class="homestay-pricing-table__header">価格（税込）</th>
                </tr>
              </thead>
              <tbody>
                <!-- 1泊2日 -->
                <tr class="homestay-pricing-table__row">
                  <td class="homestay-pricing-table__label">1泊2日</td>
                  <td class="homestay-pricing-table__value" rowspan="2">
                    <div class="homestay-pricing-value">
                      <span class="homestay-pricing-value__prefix">一律</span><br>
                      <div class="homestay-pricing-value__amount-wrapper">
                        <span class="homestay-pricing-value__amount">10,000</span><span class="homestay-pricing-value__unit">円</span>
                      </div><br>
                      <span class="homestay-pricing-value__note">※料金にお泊りセットも含まれています。</span>
                    </div>
                  </td>
                </tr>
                <!-- 2泊3日 -->
                <tr class="homestay-pricing-table__row">
                  <td class="homestay-pricing-table__label">2泊3日</td>
                  <!-- valueは上の行と統合 -->
