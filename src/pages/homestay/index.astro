          if (otherItem !== qaItem) {
            otherItem.classList.remove('active');
          }
        });
        
        // 現在のアイテムをトグル
        if (qaItem.classList.contains('active')) {
          qaItem.classList.remove('active');
        } else {
          qaItem.classList.add('active');
        }
      });
    });
  });
</script>