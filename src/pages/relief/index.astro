---
import Layout from '../../layouts/Layout.astro';
import HeroSection from '../../components/sections/common/HeroSection.astro';
import MedicalCheckSection from '../../components/sections/relief/MedicalCheckSection.astro';
import WanNyanSupportSection from '../../components/sections/relief/WanNyanSupportSection.astro';
import AfterSupportSection from '../../components/sections/relief/AfterSupportSection.astro';
import RelatedHomestaySection from '../../components/sections/common/RelatedHomestaySection.astro';
import BannerSection from '../../components/sections/common/BannerSection.astro';
import ContactCTASection from '../../components/sections/common/ContactCTASection.astro';

// パンくずリストのデータ
const breadcrumbItems = [
  { label: 'ホーム', href: '/' },
  { label: 'カトレアの安心' }
