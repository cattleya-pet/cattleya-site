    <HeroSection 
      title="カトレアの安心"
      image="/src/assets/images/backgrounds/img_bg-hero_relief-01.webp"
      breadcrumbItems={breadcrumbItems}
    />
    
    <MedicalCheckSection />
    
    <WanNyanSupportSection />
    
    <AfterSupportSection />
    
    <RelatedHomestaySection />
    
    <BannerSection />
    
    <ContactCTASection />
  </main>
</Layout>