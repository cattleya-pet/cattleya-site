---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/ui/Breadcrumb.astro';
import BaseButton from '../components/ui/buttons/BaseButton.astro';

// パンくずリストのデータ
const breadcrumbItems = [
  { label: 'ホーム', href: '/' },
  { label: '404 Not Found' }
];
---

<Layout title="404 Not Found">
  <main>
    <!-- パンくずリスト -->
    <div class="breadcrumb-container">
      <div class="container">
        <Breadcrumb items={breadcrumbItems} />
      </div>
    </div>
    
    <section class="error-404">
      <div class="container">
        <div class="error-404__content">
          <h1 class="error-404__code">404</h1>
          <h2 class="error-404__title">Not Found</h2>
          <div class="error-404__image">
            <img src="/images/ui/img_not-found-01.webp" alt="ページが見つかりません" />
          </div>
          <p class="error-404__message">
            お探しのページは見つかりませんでした。<br>
            ページが削除されたか、アドレスが間違っているなどが考えられます。
          </p>
          <div class="error-404__actions">
            <BaseButton href="/" text="トップページに戻る" variant="short" />
            <BaseButton href="/search" text="ペットを探す" variant="short" />
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style lang="scss">
  @use '../styles/variables' as *;
  @use '../styles/mixins' as *;
  @use '../styles/tokens/colors' as *;
  @use '../styles/tokens/typography' as *;
  @use '../styles/tokens/radius' as *;

  // パンくずリストコンテナ
  .breadcrumb-container {
    background-color: $color-background;
  }

  .error-404 {
    padding: rem(30) 0 rem(100);
    text-align: center;
    @include breakpoint-up(md) {
      padding: rem(50) 0 rem(100);
    }
    @include breakpoint-up(lg) {
      padding: rem(10) 0 rem(100);
    }
  }

  .error-404__content {
    max-width: rem(600);
    margin: 0 auto;
  }

  .error-404__code {
    @include typography-en-3l($font-weight-semibold);
    color: $color-text-secondary;
    margin-bottom: 0!important;
    @include breakpoint-up(md) {
      @include typography-en-4l($font-weight-semibold);
    }
  }

  .error-404__title {
    @include typography-en-l($font-weight-semibold);
    color: $color-text-secondary;
    margin: 0 0 rem(30);
    
    @include breakpoint-up(md) {
      @include typography-en-2l($font-weight-semibold);
      margin: 0 0 rem(50);
    }
  }

  .error-404__image {
    max-width: rem(400);
    margin: 0 auto rem(40);
    
    @include breakpoint-up(lg) {
      margin: 0 auto rem(60);
    }
    
    img {
      width: 100%;
      height: auto;
      aspect-ratio: 4 / 3;
      object-fit: cover;
      border-radius: $radius-2xl;
    }
  }

  .error-404__message {
    @include typography-ja-s;
    color: $color-text;
    line-height: 1.7;
    margin: 0 0 rem(40);
    text-align: left;
    
    @include breakpoint-up(md) {
      margin: 0 0 rem(60);
      text-align: center;
    }
  }

  .error-404__actions {
    display: flex;
    flex-direction: column;
    gap: rem(16);
    align-items: center;
    
    // 縦並び時はボタンの幅を統一
    :global(.base-button) {
      width: 100%;
      max-width: rem(270);
    }
    
    @include breakpoint-up(lg) {
      flex-direction: row;
      justify-content: center;
      align-items: center;
      gap: rem(40);
      
      // 横並び時は元の幅に戻す
      :global(.base-button) {
        width: auto;
        max-width: none;
      }
    }
  }
</style>