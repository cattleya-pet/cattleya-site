    <ContactCTASection />
  </main>
</Layout>

<style lang="scss">
@use '../../styles/mixins' as *;
@use '../../styles/tokens/_typography' as *;
@use '../../styles/tokens/_colors' as *;
@use '../../styles/tokens/_radius' as *;

.privacy-policy-section {
  background-color: $color-background-primary;
  padding: rem(60) 0;
  
  @include breakpoint-up(sm) {
    padding: rem(80) 0;
  }
  
  @include breakpoint-up(lg) {
    padding: rem(100) 0;
  }
}

.privacy-policy-content {
  max-width: rem(1400);
  margin: 0 auto;
}

.privacy-policy-introduction {
  margin-bottom: rem(60);
  
  @include breakpoint-up(sm) {
    margin-bottom: rem(80);
  }
  
  @include breakpoint-up(lg) {
    margin-bottom: rem(100);
  }
}

.privacy-policy-intro-text {
  @include typography-ja-s;
  color: $color-text-primary;
  line-height: 1.8;
  margin: 0;
}

.privacy-policy-articles {
  margin-bottom: rem(60);
  
  @include breakpoint-up(sm) {
    margin-bottom: rem(80);
  }
}

.privacy-policy-article {
  margin-bottom: rem(50);
  
  @include breakpoint-up(sm) {
    margin-bottom: rem(60);
  }
  
  &:last-child {
    margin-bottom: 0;
  }
}

.privacy-policy-article-title {
  @include typography-ja-m($font-weight-semibold);
  color: $color-text-secondary;
  margin-bottom: rem(10);
  padding-bottom: rem(10);
  border-bottom: 1px solid $color-text-secondary;
  
  @include breakpoint-up(lg) {
    margin-bottom: rem(15);
    padding-bottom: rem(15);
  }
}

.privacy-policy-article-content {
  p {
    @include typography-ja-s;
    color: $color-text-primary;
    line-height: 1.7;
    margin: 0 0 rem(20) 0;
    
    &:last-child {
      margin-bottom: 0;
    }
  }
  
  a {
    color: $color-text-link;
    text-decoration: underline;
    text-decoration-color: $color-text-link;
    font-weight: $font-weight-semibold;
    
    &:hover {
      color: $color-text-link-hover;
      text-decoration-color: $color-text-link-hover;
    }
  }
}

.privacy-policy-list {
  margin: rem(15) 0;
  padding-left: rem(20);
  
  li {
    @include typography-ja-s;
    color: $color-text-primary;
    line-height: 1.7;
    margin-bottom: rem(8);
    
    &:last-child {
      margin-bottom: 0;
    }
  }
}

.privacy-policy-contact {
  background-color: $color-background-primary;
  padding: rem(20);
  border-radius: $radius-s;
  margin-top: rem(15);
  
  @include breakpoint-up(sm) {
    padding: rem(30);
  }
  
  p {
    @include typography-ja-s;
    color: $color-text-primary;
    margin: 0 0 rem(8) 0;
    
    &:last-child {
      margin-bottom: 0;
    }
  }
}

.privacy-policy-date {
  text-align: right;
  padding-top: rem(40);
  
  p {
    @include typography-ja-s;
    color: $color-text-secondary;
    margin: 0 0 rem(5) 0;
    
    &:last-child {
      margin-bottom: 0;
    }
  }
}
</style>