  color: $color-text-primary;
  margin: 0 0 rem(10) 0;
  @include breakpoint-up(xl) {
    @include typography-ja-l($font-weight-semibold);
  }
}

.vision-box-divider {
  width: 100%;
  height: rem(1);
  margin: 0 auto rem(20) auto;
  
  &--red {
    background-color: #CF3D4F;
  }
  
  &--purple {
    background-color: #BB3DCE;
  }
  
  &--yellow {
    background-color: #F4BE50;
  }
}

.vision-box-content {
  p {
    @include typography-ja-s;
    color: $color-text-primary;
    line-height: 1.7;
    margin: 0;
  }
}

