---
import { siteConfig } from '../config/site';
import Header from '../components/Header/Header.astro';
import Footer from '../components/Footer/Footer.astro';
import MobileCTAButtons from '../components/ui/MobileCTAButtons.astro';
import '../styles/global.scss';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
}

const { title, description = siteConfig.description, ogImage = siteConfig.ogImage, ogType = 'website' } = Astro.props;
const fullTitle = `${title} | ${siteConfig.name}`;
const currentUrl = Astro.url.toString();
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    
    <!-- OGP Meta Tags -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content={siteConfig.name} />
    
    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16×16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32×32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/favicon/android-chrome-192x192.png" />
    
    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css" />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <MobileCTAButtons />
    
    <!-- AOS JavaScript -->
    <script>
      import AOS from 'aos';
      
      document.addEventListener('DOMContentLoaded', () => {
        // モバイル判定
        const isMobile = window.innerWidth < 768;
        
        // モバイル対応：要素の属性を動的に調整
        if (isMobile) {
          // モバイル用の軽量設定を適用
          const aosElements = document.querySelectorAll('[data-aos]');
          aosElements.forEach(element => {
            // デスクトップ用の長いdurationを短縮
            const currentDuration = element.getAttribute('data-aos-duration');
            if (currentDuration && parseInt(currentDuration) > 600) {
              element.setAttribute('data-aos-duration', '700');
            }
            
            // delayを短縮（モバイルでは快適性重視）
            const currentDelay = element.getAttribute('data-aos-delay');
            if (currentDelay && parseInt(currentDelay) > 100) {
              const newDelay = Math.max(100, Math.floor(parseInt(currentDelay) / 2));
              element.setAttribute('data-aos-delay', newDelay.toString());
            }
            
            // easingをシンプルに
            const currentEasing = element.getAttribute('data-aos-easing');
            if (currentEasing === 'ease-out-cubic') {
              element.setAttribute('data-aos-easing', 'ease-out');
            }
          });
        }
        
        AOS.init({
          duration: isMobile ? 700 : 800,
          easing: isMobile ? 'ease-out' : 'ease-out-cubic',
          once: true,
          offset: isMobile ? 60 : 120,
          delay: 0,
          disable: false // 両デバイスで有効化
        });
      });
    </script>
  </body>
</html>